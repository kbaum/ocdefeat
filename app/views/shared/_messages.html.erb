<% if !flash.empty? %>
  <% flash.each do |type, message| %>
    <%= content_tag :div, :class => "alert #{set_class_for(type)}", role: "alert" do %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= message %>
    <% end %>
  <% end %>
<% end %>
