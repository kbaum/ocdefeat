<%= form_for @obsession do |obsession_builder| %>
  <%= validation_errors_for(@obsession) %>

  <br>

  <div class="field">
    <%= obsession_builder.label :intrusive_thought, "Identify the anxiety-inducing intrusive idea:" %>
    <br>
    <%= obsession_builder.text_field :intrusive_thought, placeholder: "What if I...", class: "form-control" %>
  </div>

  <br>

  <div class="field">
    <%= obsession_builder.label :triggers, "What precipitates a prolonged period of obsession?" %>
    <br>
    <%= obsession_builder.text_field :triggers, placeholder: "My obsession is triggered by...", class: "form-control" %>
  </div>

  <br>

  <div class="field">
    <%= obsession_builder.label :time_consumed, "How many hours are consumed by this obsession daily?" %>
    <%= obsession_builder.number_field :time_consumed, in: 0..24, step: :any %>
  </div>

  <br>

  <div class="field">
    <%= obsession_builder.label :anxiety_rating, "On a scale of 1-10, rate the intensity of the discomfort produced by your obsession:" %>
    <%= obsession_builder.number_field :anxiety_rating, in: 1..10 %>
  </div>

  <br>

  <div class="field">
    <%= obsession_builder.label :symptoms, "How (if at all) does your OCD manifest physically?" %>
    <br>
    <%= obsession_builder.text_field :symptoms, placeholder: "I experience...", class: "form-control" %>
  </div>

  <br>

  <div class="field">
    <%= obsession_builder.label :rituals, "What rituals do you engage in to \"undo\" the discomfort produced by your obsession?" %>
    <br>
    <%= obsession_builder.text_field :rituals, placeholder: "I am constantly...", class: "form-control" %>
  </div>

  <br>

  <div class="field">
    <%= obsession_builder.label :theme_id, "Which OCD theme most accurately describes the content of your obsession?" %><br>
    <%= obsession_builder.select(:theme_id, Theme.all.map {|theme| [theme.name, theme.id]}, prompt: "Select a Theme") %>
  </div>

  <br>

  <div class="actions">
    <%= obsession_builder.submit class: "create-obsession btn btn-default" %>
  </div>
<% end %>
