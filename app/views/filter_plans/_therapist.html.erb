<br>
<h4>Filter Your Patients' Plans by...</h4>
<br>
<%= form_tag(plans_path, method: "get") do %>
  <%= select_tag "designer", options_from_collection_for_select(counselees, "id", "name"), prompt: "Plan Designer" %>
  <br><br>
  <%= select_tag "patient_progressing", options_from_collection_for_select(counselees, "id", "name"), prompt: "Patient's Progress" %>
  <br><br>
  <%= select_tag "subset", options_from_collection_for_select(themes, "id", "name"), prompt: "OCD Subset" %>
  <br><br>
  <%= submit_tag "Filter Plans" %>
<% end %>

<br>

<% if done || undone %> <!-- Therapist filtered plans by patient's progress toward ERP plan completion -->
  <%= render partial: "plan_progress_div", locals: { done: done, undone: undone } %>
<% end %>
