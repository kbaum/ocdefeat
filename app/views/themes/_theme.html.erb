<div class="well well-lg">
  <h4><mark><%= theme.name %></mark></h4>
  <small><em> â€” OCD theme contributed by <%= theme.contributor_name %></em></small>

  <br><br>

  <% unless theme.description.blank? %>
    <p><%= theme.description %></p>
  <% end %>

  <br>

  <p><em><%= tally_popularity(theme) %></em></p>

  <% if policy(theme).edit? %>
    <%= link_to edit_theme_path(theme), class: "btn btn-default btn-sm" do %>
      <%= content_tag(:span, nil, class: "glyphicon glyphicon-edit") %> Edit Theme
    <% end %>
  <% end %>

  <% if policy(theme).destroy? %>
    <%= link_to theme_path(theme), method: :delete, data: { confirm: "Are you sure you want to delete this OCD theme?" }, class: "btn btn-danger btn-sm" do %>
      <%= content_tag(:span, nil, class: "glyphicon glyphicon-trash") %> Delete Theme
    <% end %>
  <% end %>
</div>
