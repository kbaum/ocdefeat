<% if policy(user).edit? %>
  <%= link_to edit_user_path(user), class: "btn btn-primary btn-md" do %>
    <%= content_tag(:span, nil, class: "glyphicon glyphicon-edit") %> Edit Account
  <% end %>
<% end %>

<% if policy(user).destroy? %>
  <%= link_to user_path(user), method: :delete, data: { confirm: "Your account will be permanently deleted. Are you sure you want to leave the OCDefeat community?" }, class: "btn btn-danger btn-md" do %>
    <%= content_tag(:span, nil, class: "glyphicon glyphicon-trash") %> Delete Account
  <% end %>
<% end %>
